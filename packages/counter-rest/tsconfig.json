{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "types": ["jest", "node"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,

    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@softspiders/*": ["./*/src"]
    }
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/setupTests.ts"
  ]

}
